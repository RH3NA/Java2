<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="308.0" prefWidth="448.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxdemo.LoginController">
   <top>
      <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
      
          <Label fx:id="welcomeText" />
          <Button fx:id="HelloButton" onAction="#onHelloButtonClick" text="Hello!" />
      </VBox>
   </top>
   <left>
      <AnchorPane prefHeight="200.0" prefWidth="168.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
      <AnchorPane prefHeight="200.0" prefWidth="280.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="UserNameLabel" layoutX="27.0" layoutY="19.0" text="Username" />
            <Label fx:id="PasswordLabel" layoutX="27.0" layoutY="64.0" text="Password" />
            <PasswordField fx:id="PasswordInput" layoutX="101.0" layoutY="56.0" promptText="Enter User ID" />
            <TextField fx:id="UserNameInput" layoutX="101.0" layoutY="15.0" promptText="Enter email" />
            <Button fx:id="LoginButton" layoutX="65.0" layoutY="98.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="151.0" text="Login" />
            <Button fx:id="RegisterButton" layoutX="141.0" layoutY="156.0" mnemonicParsing="false" onAction="#onRegisterButtonClick" prefHeight="30.0" prefWidth="104.0" text="Register" />
            <Label fx:id="RegisterLabel" layoutX="60.0" layoutY="162.0" text="No account?" />
         </children>
      </AnchorPane>
   </right>
</BorderPane>
