    </VBox>
    <VBox layoutX="14.0" layoutY="71.0" spacing="40.0">
        <Label fx:id="FirstnameLabel" text="Firstname"/>
        <Label fx:id="PhoneLabel" text="Phone"/>
        <Label fx:id="UserTypeLabel" text="User Type"/>
        <Label fx:id="EmailLabel" text="Email"/>
        <Label fx:id="NotesLabel" text="Notes"/>
