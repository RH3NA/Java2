            fx:controller="com.example.javafxdemo.LoginController">
    <VBox layoutX="14.0" layoutY="88.0" spacing="32.0">
        <TextField fx:id="FirstnameInput" prefHeight="25.0" prefWidth="162.0" promptText="Firstname"
                   VBox.vgrow="NEVER"/>
