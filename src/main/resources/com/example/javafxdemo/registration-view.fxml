    <TextField fx:id="LastnameInput" layoutX="206.0" layoutY="88.0" prefHeight="25.0" prefWidth="162.0"
               promptText="Lastname"/>
    <TextArea fx:id="NotesInput" layoutX="14.0" layoutY="315.0" prefHeight="66.0" prefWidth="572.0"/>
    <Button fx:id="RegisterButton" layoutX="405.0" layoutY="259.0" mnemonicParsing="false" text="REGISTER"/>
