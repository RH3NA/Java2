   </top>
   <left>
      <AnchorPane fx:id="anchorPane1" prefHeight="582.0" prefWidth="758.0" BorderPane.alignment="CENTER" />
   </left>
   <right>
       <AnchorPane fx:id="anchorPane2" prefHeight="459.0" prefWidth="150.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="confirmButton" layoutX="59.0" layoutY="320.0" mnemonicParsing="false" onAction="#onConfirmButton" prefHeight="34.0" prefWidth="75.0" text="Confirm" />
            <Button fx:id="backButton" layoutX="59.0" layoutY="364.0" mnemonicParsing="false" onAction="#onBackButtonClick" prefHeight="34.0" prefWidth="75.0" text="Back" />
            <Label fx:id="successLabel" alignment="CENTER" layoutX="42.0" layoutY="66.0" prefHeight="49.0" prefWidth="75.0" />
